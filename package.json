{
  "version": "1.0.0",
  "description": "机器猫主题桌面宠物",
  "author": "边缘骇客编程实验室",
  "name": "EdgeHakerMini",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "pack": "electron-builder --win --x64"
  },
  "build": {
    "appId": "EdgeHakerMini",
    "productName": "机器猫主题桌面宠物",
    "extraFiles": [
      {
        "from": "./assets",
        "to": "./assets"
      },
      {
        "from": "./audio",
        "to": "./audio"
      },
      {
        "from": "./access_token.txt",
        "to": "./access_token.txt"
      },
      {
        "from": "./config.json",
        "to": "./config.json"
      },
      {
        "from": "./.env",
        "to": "./.env"
      }
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/doraemon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "EdgeHakerMini",
      "license": "LICENSE.txt",
      "uninstallDisplayName": "EdgeHakerMini"
    }
  },
  "nsis": {
    "oneClick": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "node-notifier": "^10.0.1",
    "node-schedule": "^2.1.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "electron": "^27.0.4"
  }
}